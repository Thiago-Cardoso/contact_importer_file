<div class="d-grid gap-2 d-md-flex">
  <%= form_tag contacts_import_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag 'Import CSV file', class: 'btn btn-outline-secondary' %>
  <% end %>
  <%= link_to 'Delete all contacts', contacts_destroy_path, method: :delete, class: 'btn btn-outline-danger', type: "button" %>
</div>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Credit Card</th>
      <th>Franchise</th>
      <th>Email</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.date_of_birth.strftime('%Y %B %d') %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.address %></td>
        <td><%= contact.credit_card.to_s.last(4) %></td>
        <td><%= contact.franchise %></td>
        <td><%= contact.email %></td>
        <td><%= contact.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>